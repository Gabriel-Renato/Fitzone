# FitZone - Redirecionamento de rotas
# Configurado para funcionar no InfinityFree (com e sem mod_rewrite)

# Definir index.php como arquivo de índice padrão
DirectoryIndex index.php index.html

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Redirecionar requisições da API para api.php na raiz (PRIORIDADE MÁXIMA)
    # Formato: /api/v1/exercises -> api.php
    RewriteCond %{REQUEST_URI} ^/api/(.*)$
    RewriteCond %{REQUEST_URI} !^/api/index\.php
    RewriteRule ^api/(.*)$ api.php [L,QSA]
    
    # NÃO redirecionar arquivos que existem fisicamente (com ou sem extensão)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # NÃO redirecionar diretórios que existem fisicamente
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirecionar tudo para index.php (que decide o que fazer)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>

# Fallback para InfinityFree: Se mod_rewrite não funcionar, usar estrutura de diretórios
# As requisições podem ser feitas via /api/index.php/v1/exercises

