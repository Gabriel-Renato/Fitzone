# FitZone - Redirecionamento de rotas

<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # NÃO redirecionar arquivos que existem fisicamente (com ou sem extensão)
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # NÃO redirecionar diretórios que existem fisicamente
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Redirecionar requisições da API para api.php na raiz
    RewriteCond %{REQUEST_URI} ^/api/(.*)$
    RewriteRule ^api/(.*)$ api.php [L,QSA]
    
    # Redirecionar tudo para index.php (que decide o que fazer)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php [L,QSA]
</IfModule>

